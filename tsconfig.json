{
	"extends": "@vue/tsconfig/tsconfig.web.json",
	"include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"target": "ESNext",
		"lib": ["ESNext", "DOM"],
		"isolatedModules": true,
		"noImplicitThis": true
	},

	"references": [
		{
			"path": "./tsconfig.vite-config.json"
		}
	]
}
